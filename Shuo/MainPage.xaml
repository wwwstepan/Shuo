<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Shuo"
             x:Class="Shuo.MainPage"
             Title="Shuō">

    <ContentPage.BindingContext>
        <local:AppModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Margin="10" Background="#F5F5C0">
        <Image Source="shuohua.JPG" HeightRequest="180" Aspect="AspectFit" />
        <Button Text="{Binding ButtonLearnModeText}" FontSize="26"
                Command="{Binding NextLearnModeCommand}" 
                Padding="0,30" Margin="10,10" />
        <Button Text="{Binding ButtonLearnVolumeText}" FontSize="26"
                Command="{Binding NextLearnVolumeCommand}" 
                Padding="0,30" Margin="40,10" />
        <Button Text="Начать" FontSize="32" Command="{Binding StartLearningCommand}"
                Padding="0,30" Margin="40,10,40,20" />
    </VerticalStackLayout>
</ContentPage>
